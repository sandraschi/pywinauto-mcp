# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
DEBUG=false
RELOAD=false
WORKERS=1
ENV=development

# Security
API_KEYS=your-api-key-1,your-api-key-2
CORS_ORIGINS=*
RATE_LIMIT=100
RATE_WINDOW=60

# PyWinAuto Settings
TIMEOUT=10.0
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0

# Screenshot Settings
SCREENSHOT_DIR=./screenshots
SCREENSHOT_FORMAT=png

# OCR Settings
TESSERACT_CMD=/usr/bin/tesseract  # Path to tesseract executable
DEFAULT_LANGUAGE=eng

# Logging
LOG_FILE=pywinauto-mcp.log
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5
