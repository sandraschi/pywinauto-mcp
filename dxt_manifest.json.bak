{
  "name": "pywinauto-mcp",
  "display_name": "PyWinAuto MCP",
  "version": "0.1.0",
  "description": "Windows UI Automation MCP server for controlling Windows applications",
  "author": "Sandra Schi",
  "license": "MIT",
  "repository": "https://github.com/sandraschi/pywinauto-mcp",
  "categories": ["automation", "productivity", "testing"],
  "keywords": ["windows", "automation", "ui-testing"],
  
  "server": {
    "command": "python -m pywinauto_mcp.main",
    "url": "http://localhost:8000",
    "timeout": 30
  },

  "tools": [
    {
      "name": "find_window",
      "description": "Find a window by its attributes",
      "parameters": {
        "title": {
          "type": "string",
          "description": "Window title or partial title (regex pattern)",
          "required": false
        },
        "class_name": {
          "type": "string",
          "description": "Window class name",
          "required": false
        },
        "process_id": {
          "type": "integer",
          "description": "Process ID of the window",
          "required": false
        },
        "timeout": {
          "type": "number",
          "default": 10.0,
          "description": "Maximum time to wait for the window (in seconds)"
        }
      },
      "examples": [
        {
          "name": "Find window by title",
          "input": {
            "title": "Notepad"
          },
          "description": "Find a window with 'Notepad' in the title"
        },
        {
          "name": "Find window by class name",
          "input": {
            "class_name": "Notepad"
          },
          "description": "Find a window with the specified class name"
        }
      ]
    },
    {
      "name": "click_element",
      "description": "Click on a UI element in the specified window",
      "parameters": {
        "window_handle": {
          "type": "integer",
          "description": "Handle of the window containing the element"
        },
        "control_id": {
          "type": "string",
          "description": "Automation ID of the element to click",
          "required": false
        },
        "title": {
          "type": "string",
          "description": "Title of the element to click",
          "required": false
        },
        "button": {
          "type": "string",
          "default": "left",
          "enum": ["left", "right", "middle"],
          "description": "Mouse button to use for clicking"
        }
      },
      "examples": [
        {
          "name": "Click button by control ID",
          "input": {
            "window_handle": 123456,
            "control_id": "btnSubmit"
          },
          "description": "Click a button with the specified automation ID"
        },
        {
          "name": "Click button by title",
          "input": {
            "window_handle": 123456,
            "title": "OK"
          },
          "description": "Click a button with the specified title"
        }
      ]
    },
    {
      "name": "type_text",
      "description": "Type text into a window or control",
      "parameters": {
        "window_handle": {
          "type": "integer",
          "description": "Handle of the window containing the element"
        },
        "text": {
          "type": "string",
          "description": "Text to type"
        },
        "control_id": {
          "type": "string",
          "description": "Automation ID of the element to type into",
          "required": false
        },
        "title": {
          "type": "string",
          "description": "Title of the element to type into",
          "required": false
        }
      },
      "examples": [
        {
          "name": "Type into edit field by control ID",
          "input": {
            "window_handle": 123456,
            "control_id": "txtUsername",
            "text": "testuser"
          },
          "description": "Type text into an edit field with the specified automation ID"
        },
        {
          "name": "Type into edit field by title",
          "input": {
            "window_handle": 123456,
            "title": "Password",
            "text": "mypassword"
          },
          "description": "Type text into an edit field with the specified title"
        }
      ]
    },
    {
      "name": "health_check",
      "description": "Check if the PyWinAuto MCP server is running",
      "parameters": {},
      "examples": [
        {
          "name": "Check server status",
          "input": {},
          "description": "Check if the PyWinAuto MCP server is running"
        }
      ]
    }
  ]
}
